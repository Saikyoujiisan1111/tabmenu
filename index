    <script type="text/javascript">
    var dorekeep;
      window.onload = function Onload(){
        dorekeep = 2;
        whichTab(2)
      }
      function whichTab(dore){
        document.getElementById("content"+dorekeep).classList.add("displaynone");
        window.document.getElementById("tabAnimation").style.position = "absolute";
        document.getElementById("tabAnimation").animate( {
          marginLeft : [ document.getElementById("tabAnimation").getBoundingClientRect().x+"px", document.getElementById(dore).getBoundingClientRect().x+"px"],
        } , {
          fill: "forwards",
          duration: 200,
          iterations: 1
        });
        document.getElementById("content"+dore).classList.remove("displaynone");
        dorekeep = dore;
      }
    </script>

  </head>
  <body>

    <div class="tabmenu">
      <button type="button" onclick="whichTab(1)" id="1" class="tab">イベント</button>
      <button type="button" onclick="whichTab(2)" id="2" class="tab">問題集</button>
    </div>
    
    <button id="tabAnimation" class="tab" style="background-color: white; mix-blend-mode: difference;"></button>

